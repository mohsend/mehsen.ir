---
layout: compress
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xml:lang="{{ site.lang }}">
	<channel>
		<atom:link href="{{ site.url }}/podcast.xml" rel="self" type="application/rss+xml" />
		<title>{{ site.title }}</title>
		<description>{{ site.description | strip_html | xml_escape }}</description>
		<link>{{ site.url }}</link>
		<language>{{ site.lang }}</language>
		<managingEditor>{{ site.author.email }} ({{ site.author.name }})</managingEditor>
		<webMaster>{{ site.author.email }} ({{ site.author.name }})</webMaster>
		<copyright>2018-{{ 'now' | date: "%Y" }} CreativeCommons Attribution 4.0 International - {{ site.title }}</copyright>
		<pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
		<image>
			<link>{{ site.url }}</link>
			<url>{{ site.url }}</url>
			<title>{{ site.title }}</title>
		</image>
		<itunes:subtitle>{{ site.description | strip_html |  xml_escape }}</itunes:subtitle>
		<itunes:author>{{ site.author.name }}</itunes:author>
		<itunes:summary>{{ site.description | strip_html | xml_escape }}</itunes:summary>
		<itunes:keywords>{{ site.keywords }}</itunes:keywords>
		<itunes:owner>
			<itunes:name>{{ site.author.name }}</itunes:name>
			<itunes:email>{{ site.author.email }}</itunes:email>
		</itunes:owner>
		<itunes:image href="{{ site.url }}{{ site.podcast.cover_art }}" />
		<itunes:category text="Society &amp; Culture">
			<itunes:category text="Personal Journals" />
		</itunes:category>
		<itunes:explicit>no</itunes:explicit>
		{% for post in site.posts %}
			{% if post.layout == 'podcast' %}
			{% if site.podcast.statistics_prefix %}
				{% assign mp3 = post.podcast.mp3.file | remove_first: 'https://' | remove_first: 'http://' | prepend: site.podcast.statistics_prefix %}
				{% assign ogg = post.podcast.ogg.file | remove_first: 'https://' | remove_first: 'http://' | prepend: site.podcast.statistics_prefix %}
				{% assign opus = post.podcast.opus.file | remove_first: 'https://' | remove_first: 'http://' | prepend: site.podcast.statistics_prefix %}
			{% else %}
				{% assign mp3 = post.podcast.mp3.file %}
				{% assign ogg = post.podcast.opus.file %}
				{% assign opus = post.podcast.opus.file %}
			{% endif %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<link>{{ site.url }}{{ post.url }}</link>
				<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
				<description>{{ post.content | xml_escape }}</description>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
				<enclosure url="{{ mp3 }}" length="{{ post.podcast.mp3.size }}" type="audio/mp3"/>
				<enclosure url="{{ ogg }}" length="{{ post.podcast.ogg.size }}" type="audio/ogg; codecs=vorbis"/>
				<enclosure url="{{ opus }}" length="{{ post.podcast.opus.size }}" type="audio/ogg; codecs=opus"/>
				<itunes:author>{{ site.author.name }}</itunes:author>
				<itunes:subtitle>{{ site.title }}: {{ post.title }}</itunes:subtitle>
				<itunes:summary>{{ post.podcast.summary | xml_escape }}</itunes:summary>
				<itunes:duration>{{ post.podcast.duration }}</itunes:duration>
				<itunes:keywords>{{ post.podcast.keywords }}</itunes:keywords>
				<itunes:image href="{{ site.url }}{{ post.podcast.image }}" />
				<itunes:explicit>{{ post.podcast.explicit | default: "no" }}</itunes:explicit>
				<itunes:block>{{ post.podcast.block | default: "no" }}</itunes:block>
			</item>
			{% endif %}
		{% endfor %}
	</channel>
</rss>
